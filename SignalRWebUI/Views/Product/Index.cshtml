@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product Operations</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Product List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Related processes with product table can be done from below.

						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Product Name</th>
									<th scope="col">Price</th>
									<th scope="col">Category</th>
									<th scope="col">Status</th>
									<th scope="col">Remove</th>
									<th scope="col">Edit</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.ProductName</td>
										<td>@item.Price</td>
										<td>@item.CategoryName</td>
										<td>@item.ProductStatus</td>
										<td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Remove</a></td>
										<td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Edit</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-outline-primary">New Product</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


