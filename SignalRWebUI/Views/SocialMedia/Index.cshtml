@model List<ResultSocialMediaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;

}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Social Media Operations</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Social Media List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can operate Social Media-related transactions below.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Title</th>
									<th scope="col">Url</th>
									<th scope="col">Remove</th>
									<th scope="col">Edit</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Title</td>
										<td>@item.Url</td>
										<td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Remove</a></td>
										<td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Edit</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-outline-primary">New Social Media</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>